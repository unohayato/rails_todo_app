<!DOCKTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Todo</title>
  </head>
  <body>
    <H1>Todo</H1>
    <ul>
      <% if current_user && session[:user_id] == current_user.id %>
        <%# ログイン中のみ %>
        <%= link_to("New Task", new_task_path) %>
        <%= link_to("Users List", users_path) %>
        <%= link_to("Your Account", user_path(current_user.id)) %>
        <%= link_to("Logout", logout_path, data: { "turbo-method": :delete }) %>
      <% else %>
        <%# ログアウト中のみ %>
        <%= link_to("Login", login_path) %>
        <%= link_to("SignUp", signup_path) %>
        <%= link_to("Todos List", tasks_path) %>
      <% end %>
  </ul>
  <body>
</html>